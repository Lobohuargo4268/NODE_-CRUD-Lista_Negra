<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Matar.com</title>
  </head>
  <body>
<!-- Barra superior --> 
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-4 h3">
    <a class="mx-auto text-white " href="#">La lista negra   <i class='bx bxs-skull bx-fw'> </i></a>
    </nav>
<!-- Tabla -->
    <div class="container">
        <a href="/create" class="btn btn-outline-dark mt-4"> <i class='bx bx-plus-medical bx-fw'></i> Ingresar nuevo objetivo  </a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-dark text-white">
                    <th scope="col">Numero de lista</th>
                    <th scope="col">Victima</th>
                    <th scope="col">RH</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((user)=> {%>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.user %></td>
                    <td><%= user.rol %></td>
                    <td>
                        <a href="/edit/<%=user.id %>" class="btn btn-outline-info"><i class='bx bx-edit' ></i></a>
                        <a href="/delete/<%= user.id %>" class="btn btn-outline-danger"><i class='bx bx-trash' ></i></a>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>